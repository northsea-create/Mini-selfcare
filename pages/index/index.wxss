.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 40rpx;
  margin-bottom: 60rpx;
}

.rest-btn {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  background: #4CAF50;
  color: white;
}

.footer {
  position: fixed;
  bottom: 40rpx;
  color: #999;
  font-size: 28rpx;
}
